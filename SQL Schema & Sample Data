-- Sample Evaluations (Scores 40-98)
INSERT INTO evaluations (candidate_id, crisis_management_score, sustainability_score, team_motivation_score)
SELECT id, 
       (40 + RAND() * 58), 
       (50 + RAND() * 48), 
       (45 + RAND() * 53) 
FROM candidates;
