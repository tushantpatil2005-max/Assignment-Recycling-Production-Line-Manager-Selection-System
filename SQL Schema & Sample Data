Recycling Manager Selection System - Database1. MySQL SchemaThis schema follows the requirements for a standalone, ranking-based selection system.-- Create Database
CREATE DATABASE IF NOT EXISTS recycling_selection_system;
USE recycling_selection_system;

-- 1. Candidates Table
CREATE TABLE IF NOT EXISTS candidates (
    id INT AUTO_INCREMENT PRIMARY KEY,
    full_name VARCHAR(255) NOT NULL,
    email VARCHAR(255) UNIQUE NOT NULL,
    years_experience INT NOT NULL,
    primary_skill VARCHAR(100) NOT NULL,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

-- 2. Evaluations Table
-- Stores the scores provided by the AI Prompting system
CREATE TABLE IF NOT EXISTS evaluations (
    evaluation_id INT AUTO_INCREMENT PRIMARY KEY,
    candidate_id INT NOT NULL,
    crisis_management_score DECIMAL(5,2) NOT NULL DEFAULT 0,
    sustainability_score DECIMAL(5,2) NOT NULL DEFAULT 0,
    team_motivation_score DECIMAL(5,2) NOT NULL DEFAULT 0,
    evaluation_notes TEXT,
    last_updated TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
    FOREIGN KEY (candidate_id) REFERENCES candidates(id) ON DELETE CASCADE
);

-- 3. Rankings View (Auto-updated)
-- Logic: 40% Crisis Management, 30% Sustainability, 30% Motivation
CREATE OR REPLACE VIEW candidate_rankings AS
SELECT 
    c.id,
    c.full_name,
    c.primary_skill,
    e.crisis_management_score,
    e.sustainability_score,
    e.team_motivation_score,
    (e.crisis_management_score * 0.40 + 
     e.sustainability_score * 0.30 + 
     e.team_motivation_score * 0.30) AS composite_score
FROM candidates c
JOIN evaluations e ON c.id = e.candidate_id
ORDER BY composite_score DESC;
